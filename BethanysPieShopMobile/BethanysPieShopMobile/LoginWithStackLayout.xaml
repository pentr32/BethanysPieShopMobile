<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BethanysPieShopMobile.LoginWithStackLayout"
             BackgroundImageSource="patternwide.png">
    <StackLayout>
        
        <Label Text="Welcome to Bethany's Pie Shop" 
               FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        <StackLayout Orientation="Horizontal">

            <Label VerticalOptions="Center" Text="User name" FontSize="Medium" ></Label>
            <Entry Placeholder="Enter your username" HorizontalOptions="StartAndExpand" ></Entry>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" Text="Password" FontSize="Medium" ></Label>
            <Entry Placeholder="Enter your password" HorizontalOptions="StartAndExpand" ></Entry>
        </StackLayout>
    </StackLayout>
</ContentPage>